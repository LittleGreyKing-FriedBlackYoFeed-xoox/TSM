<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tsm.system.mapper.RoleMapper">

    <!-- 角色结果映射 -->
    <resultMap id="BaseResultMap" type="com.tsm.system.entity.Role">
        <id column="id" property="id" />
        <result column="role_name" property="roleName" />
        <result column="role_code" property="roleCode" />
        <result column="description" property="description" />
        <result column="status" property="status" />
        <result column="create_time" property="createTime" />
        <result column="update_time" property="updateTime" />
        <result column="create_by" property="createBy" />
        <result column="update_by" property="updateBy" />
        <result column="deleted" property="deleted" />
    </resultMap>

    <!-- 角色权限结果映射 -->
    <resultMap id="RoleWithPermissionsResultMap" type="com.tsm.system.entity.Role" extends="BaseResultMap">
        <collection property="permissions" ofType="com.tsm.system.entity.Permission">
            <id column="perm_id" property="id" />
            <result column="parent_id" property="parentId" />
            <result column="perm_name" property="permissionName" />
            <result column="perm_code" property="permissionCode" />
            <result column="perm_type" property="permissionType" />
            <result column="menu_url" property="menuUrl" />
            <result column="menu_icon" property="menuIcon" />
            <result column="sort_order" property="sortOrder" />
            <result column="perm_status" property="status" />
        </collection>
    </resultMap>

    <!-- 角色按钮权限结果映射 -->
    <resultMap id="RoleWithButtonsResultMap" type="com.tsm.system.entity.Role" extends="BaseResultMap">
        <collection property="buttons" ofType="com.tsm.system.entity.Button">
            <id column="btn_id" property="id" />
            <result column="permission_id" property="permissionId" />
            <result column="btn_name" property="buttonName" />
            <result column="btn_code" property="buttonCode" />
            <result column="btn_icon" property="buttonIcon" />
            <result column="btn_sort" property="sortOrder" />
            <result column="btn_status" property="status" />
        </collection>
    </resultMap>

    <!-- 基础字段 -->
    <sql id="Base_Column_List">
        id, role_name, role_code, description, status, 
        create_time, update_time, create_by, update_by, deleted
    </sql>

    <!-- 根据角色编码查询角色 -->
    <select id="selectByRoleCode" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List" />
        FROM tsm_role
        WHERE role_code = #{roleCode} AND deleted = 0
    </select>

    <!-- 分页查询角色列表 -->
    <select id="selectRolePage" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List" />
        FROM tsm_role
        WHERE deleted = 0
        <if test="roleName != null and roleName != ''">
            AND role_name LIKE CONCAT('%', #{roleName}, '%')
        </if>
        <if test="roleCode != null and roleCode != ''">
            AND role_code LIKE CONCAT('%', #{roleCode}, '%')
        </if>
        <if test="status != null">
            AND status = #{status}
        </if>
        ORDER BY create_time DESC
    </select>

    <!-- 查询角色及其权限信息 -->
    <select id="selectRoleWithPermissions" resultMap="RoleWithPermissionsResultMap">
        SELECT 
            r.id, r.role_name, r.role_code, r.description, r.status,
            r.create_time, r.update_time, r.create_by, r.update_by, r.deleted,
            p.id as perm_id, p.parent_id, p.permission_name as perm_name, p.permission_code as perm_code,
            p.permission_type as perm_type, p.menu_url, p.menu_icon, p.sort_order, p.status as perm_status
        FROM tsm_role r
        LEFT JOIN tsm_role_permission rp ON r.id = rp.role_id
        LEFT JOIN tsm_permission p ON rp.permission_id = p.id AND p.deleted = 0
        WHERE r.id = #{roleId} AND r.deleted = 0
    </select>

    <!-- 查询角色及其按钮权限信息 -->
    <select id="selectRoleWithButtons" resultMap="RoleWithButtonsResultMap">
        SELECT 
            r.id, r.role_name, r.role_code, r.description, r.status,
            r.create_time, r.update_time, r.create_by, r.update_by, r.deleted,
            b.id as btn_id, b.permission_id, b.button_name as btn_name, b.button_code as btn_code,
            b.button_icon as btn_icon, b.sort_order as btn_sort, b.status as btn_status
        FROM tsm_role r
        LEFT JOIN tsm_role_button rb ON r.id = rb.role_id
        LEFT JOIN tsm_button b ON rb.button_id = b.id AND b.deleted = 0
        WHERE r.id = #{roleId} AND r.deleted = 0
    </select>

    <!-- 根据用户ID查询角色列表 -->
    <select id="selectRolesByUserId" resultMap="BaseResultMap">
        SELECT r.<include refid="Base_Column_List" />
        FROM tsm_role r
        INNER JOIN tsm_user_role ur ON r.id = ur.role_id
        WHERE ur.user_id = #{userId} AND r.deleted = 0
        ORDER BY r.create_time DESC
    </select>

    <!-- 检查角色编码是否存在 -->
    <select id="checkRoleCodeExists" resultType="int">
        SELECT COUNT(1)
        FROM tsm_role
        WHERE role_code = #{roleCode} AND deleted = 0
        <if test="excludeId != null">
            AND id != #{excludeId}
        </if>
    </select>

    <!-- 检查角色名称是否存在 -->
    <select id="checkRoleNameExists" resultType="int">
        SELECT COUNT(1)
        FROM tsm_role
        WHERE role_name = #{roleName} AND deleted = 0
        <if test="excludeId != null">
            AND id != #{excludeId}
        </if>
    </select>

    <!-- 批量删除角色 -->
    <update id="deleteBatchByIds">
        UPDATE tsm_role SET deleted = 1
        WHERE id IN
        <foreach collection="roleIds" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </update>

    <!-- 更新角色状态 -->
    <update id="updateStatus">
        UPDATE tsm_role 
        SET status = #{status}, update_time = NOW()
        WHERE id = #{roleId} AND deleted = 0
    </update>

    <!-- 删除角色权限关联 -->
    <delete id="deleteRolePermissions">
        DELETE FROM tsm_role_permission WHERE role_id = #{roleId}
    </delete>

    <!-- 批量插入角色权限关联 -->
    <insert id="insertRolePermissions">
        INSERT INTO tsm_role_permission (role_id, permission_id)
        VALUES
        <foreach collection="permissionIds" item="permissionId" separator=",">
            (#{roleId}, #{permissionId})
        </foreach>
    </insert>

    <!-- 删除角色按钮权限关联 -->
    <delete id="deleteRoleButtons">
        DELETE FROM tsm_role_button WHERE role_id = #{roleId}
    </delete>

    <!-- 批量插入角色按钮权限关联 -->
    <insert id="insertRoleButtons">
        INSERT INTO tsm_role_button (role_id, button_id)
        VALUES
        <foreach collection="buttonIds" item="buttonId" separator=",">
            (#{roleId}, #{buttonId})
        </foreach>
    </insert>

    <!-- 删除用户角色关联 -->
    <delete id="deleteUserRoles">
        DELETE FROM tsm_user_role WHERE user_id = #{userId}
    </delete>

    <!-- 批量插入用户角色关联 -->
    <insert id="insertUserRoles">
        INSERT INTO tsm_user_role (user_id, role_id)
        VALUES
        <foreach collection="roleIds" item="roleId" separator=",">
            (#{userId}, #{roleId})
        </foreach>
    </insert>

</mapper>